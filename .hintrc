{
  "extends": [
    "development"
  ],
  "hints": {
    "typescript-config/consistent-casing": "off",
    "typescript-config/strict": "off",
    "compat-api/html": [
      "default",
      {
        "ignore": [
          "img[loading]",
          "meta[name=theme-color]"
        ]
      }
    ],
    "axe/forms": [
      "default",
      {
        "label": "off"
      }
    ],
    "compat-api/css": [
      "default",
      {
        "ignore": [
          "backface-visibility"
        ]
      }
    ]
  }
}